#!/usr/bin/env bash

set -ex

DIR="services/$1"

# Read the image manifest
source ${DIR}/manifest
NAME=${NAME:-$1}
FROM=${FROM:-$1}
FILTER=${FILTER:-cat}
CUSTOM="${CUSTOM:-}"

function getTags() {
    SOURCE="${SOURCE:-https://raw.githubusercontent.com/docker-library/official-images/master/library/${FROM}}"
    curl --silent --location --fail --retry 3 "${SOURCE}" | \
        grep Tags | \
        sed 's/^.*Tags: //g' | \
        grep -v -e alpine -e slim -e onbuild -e windows -e wheezy -e nanoserver | \
        ${FILTER} | \
        sed 's/, /:/' | \
        sed 's/, /,/g' | \
        sort
}

function getAliases() {
    TAGS=$1
    if $(echo "$TAGS" | grep -q :); then
        echo "$TAGS" | cut -d: -f2
    fi
}

function renderDockerfile() {
    IMAGE="${FROM}:$1"

    TEMP=$(mktemp)
    echo "${CUSTOM}" > $TEMP

    if [ $2 -eq 1 ]; then
        RUN="RUN mkdir -p /etc/service/${NAME}\nCOPY run /etc/service/${NAME}/run"
    fi

    cat Dockerfile.template | \
        sed "s|{{FROM}}|${IMAGE}|g" | \
        sed "/{{CUSTOM}}/ r ${TEMP}" | \
        sed "/{{CUSTOM}}/d" | \
        sed "s|{{RUN}}|${RUN}|g"

    rm $TEMP
}

rm -rf images/$NAME

for TAGS in $(getTags); do
    TAG=$(echo "${TAGS}" | cut -d: -f1)
    ALIASES=$(getAliases ${TAGS})

    mkdir -p "images/${NAME}/${TAG}"

    if [ -e "${DIR}/run" ]; then
        cp "${DIR}/run" "images/${NAME}/${TAG}/run"
        chmod +x "images/${NAME}/${TAG}/run"
        RUN=1
    fi

    renderDockerfile $TAG $RUN > "images/${NAME}/${TAG}/Dockerfile"
    echo "${TAG}" > "images/${NAME}/${TAG}/TAG"
    echo "${ALIASES}" > "images/${NAME}/${TAG}/ALIASES"
    echo "${NAME}" > "images/${NAME}/${TAG}/NAME"
done
