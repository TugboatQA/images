#!/usr/bin/env bash

set -ex

DIR="services/$1"

if [ -e "${DIR}/manifest" ]; then
    source "${DIR}/manifest"
fi

NAME=${NAME:-$1}
FILTER=${FILTER:-cat}

function getTags() {
    SOURCE="${SOURCE:-https://raw.githubusercontent.com/docker-library/official-images/master/library/${NAME}}"
    curl --silent --location --fail --retry 3 "${SOURCE}" | \
        grep Tags | \
        sed 's/^.*Tags: //g' | \
        grep -v -e alpine -e slim -e onbuild -e windows -e wheezy -e nanoserver | \
        ${FILTER} | \
        sed 's/, /:/' | \
        sed 's/, /,/g' | \
        sort
}

function getAliases() {
    TAGS=$1
    if $(echo "$TAGS" | grep -q :); then
        echo "$TAGS" | cut -d: -f2
    fi
}

function renderDockerfile() {
    IMAGE="${NAME}:$1"

    if [ $2 -eq 1 ]; then
        RUN="RUN mkdir -p /etc/service/${NAME}\nCOPY run /etc/service/${NAME}/run"
    fi

    if [ "x$3" == "x" ]; then
        CUSTOM=/dev/null
    else
        CUSTOM=$3
    fi

    cat Dockerfile.template | \
        sed "s|{{FROM}}|${IMAGE}|g" | \
        sed "/{{CUSTOM}}/ r ${CUSTOM}" | \
        sed "/{{CUSTOM}}/d" | \
        sed "s|{{RUN}}|${RUN}|g"
}

rm -rf images/$NAME

for TAGS in $(getTags); do
    TAG=$(echo "${TAGS}" | cut -d: -f1)
    ALIASES=$(getAliases ${TAGS})

    mkdir -p "images/${NAME}/${TAG}"

    if [ -e "${DIR}/run" ]; then
        cp "${DIR}/run" "images/${NAME}/${TAG}/run"
        chmod +x "images/${NAME}/${TAG}/run"
        RUN=1
    fi

    CUSTOM=/dev/null
    if [ -e "${DIR}/custom" ]; then
        CUSTOM="${DIR}/custom"
    fi

    if [ -e "${DIR}/files" ]; then
        cp -r "${DIR}/files" "images/${NAME}/${TAG}/"
    fi

    renderDockerfile $TAG $RUN $CUSTOM > "images/${NAME}/${TAG}/Dockerfile"
    echo "${TAG}" > "images/${NAME}/${TAG}/TAG"
    echo "${ALIASES}" > "images/${NAME}/${TAG}/ALIASES"
    echo "${NAME}" > "images/${NAME}/${TAG}/NAME"
done
